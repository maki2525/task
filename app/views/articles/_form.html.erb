<%= form_with model: @article, loclal: true do |form| %>
<% if @article.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@article.errors.count, "error") %>
    このタスクは保存されません
  </h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<p>
 <%= form.label :タスク %><br>
 <%= form.text_field :title %>
</p>

<p>
 <%= form.label :内容 %><br>
 <%= form.text_area :text %>
</p>

<p>
 <%= form.submit %>
</p>
<% end %>
